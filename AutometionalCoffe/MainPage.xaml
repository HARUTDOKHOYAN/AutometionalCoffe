<Page
    x:Class="AutometionalCoffee.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AutometionalCoffee"
    xmlns:local1="using:AutometionalCoffe.View.Control"
    xmlns:view="using:AutometionalCoffe.View"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#765341">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="1.25*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Coffee coonfig control  -->
        <local1:UserDisplayView
            x:Name="UserDisplay"
            Grid.RowSpan="3"
            Grid.Column="2"
            ViewModel="{x:Bind ViewModel.UserDisplayViewModel}" />

        <view:CoffeeWorkView
            x:Name="CoffeeWork"
            Grid.RowSpan="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            ViewModel="{x:Bind ViewModel.CoffeeWorkViewModel}" />

        <TextBlock
            VerticalAlignment="Center"
            Grid.Row="2"
            FontSize="24"
            Grid.Column="1"
            Text="Await coffee" />
    </Grid>
</Page>
