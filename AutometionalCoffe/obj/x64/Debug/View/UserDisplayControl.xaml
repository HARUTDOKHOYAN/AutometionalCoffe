<UserControl x:ConnectionId='1'
    x:Class="AutometionalCoffee.UserDisplayControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="using:AutometionalCoffe.View" 
    xmlns:modle1="using:AutometionalCoffee.Model"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Coffee List" 
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
        <ListView x:ConnectionId='2'
            x:Name="CoffeeList"
            Grid.Row="1"
                                                       
            IsItemClickEnabled="True"
            ScrollViewer.HorizontalScrollMode="Disabled"
            ScrollViewer.VerticalScrollMode="Disabled">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate >
                    <ItemsWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="2"></ItemsWrapGrid>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
               <DataTemplate                                     >
                    <Grid x:ConnectionId='5' Width="100" Height="60" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Button x:ConnectionId='6' x:Name="CoffeeButton"
                                Grid.Row="0" 
                                                                                  />
                        <StackPanel Grid.Row="1" >
                            <TextBlock x:ConnectionId='7'                     />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <view:UserImputParametrControl x:ConnectionId='3' Grid.Row="2" 
                                                                                 />
    </Grid>
</UserControl>

